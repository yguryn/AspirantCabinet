<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="6dp"
    android:background="@color/white"
    android:elevation="60dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Міша Куліч"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/profileImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/facultyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:text="IATE"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toEndOf="@id/nameTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/groupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:text="TI-91"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toEndOf="@id/facultyTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/estimateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="Загальна оцінка: 0"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/profileImageView"
            app:layout_constraintTop_toBottomOf="@id/reviewWorksTextView" />

        <ImageView
            android:id="@+id/reviewWorksImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_sent_work"
            app:layout_constraintStart_toEndOf="@id/profileImageView"
            app:layout_constraintTop_toBottomOf="@id/nameTextView" />

        <TextView
            android:id="@+id/reviewWorksTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:text="Переглянути роботи"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/reviewWorksImageView"
            app:layout_constraintStart_toEndOf="@id/reviewWorksImageView"
            app:layout_constraintTop_toTopOf="@id/reviewWorksImageView" />


        <ImageView
            android:id="@+id/reviewTasksImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_add_task"
            app:layout_constraintStart_toEndOf="@id/reviewWorksTextView"
            app:layout_constraintTop_toBottomOf="@id/nameTextView" />

        <TextView
            android:id="@+id/reviewTasksTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:text="Додати завдання"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/reviewTasksImageView"
            app:layout_constraintStart_toEndOf="@id/reviewTasksImageView"
            app:layout_constraintTop_toTopOf="@id/reviewTasksImageView" />

        <ImageView
            android:id="@+id/indPlanImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_ind_plan"
            app:layout_constraintStart_toEndOf="@id/profileImageView"
            app:layout_constraintTop_toBottomOf="@id/reviewWorksTextView" />

        <TextView
            android:id="@+id/indPlanTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:text="Переглянути індивідуальний план"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/indPlanImageView"
            app:layout_constraintStart_toEndOf="@id/indPlanImageView"
            app:layout_constraintTop_toTopOf="@id/indPlanImageView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
