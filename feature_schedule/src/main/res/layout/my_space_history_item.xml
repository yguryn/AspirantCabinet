<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewExpandable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    android:background="@color/background_color"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/startCardView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/borderRedLine"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:background="@color/color_border_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameEvent"
                style="@style/event_card_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLength="@integer/max_length_name_event"
                app:layout_constraintEnd_toStartOf="@id/nameEventConstraint"
                app:layout_constraintStart_toEndOf="@id/borderRedLine"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Retrospective - AlphaBank Home Insurance App" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/nameEventConstraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />

            <ImageView
                android:id="@+id/roomLocked"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_room_lock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/borderRedLine"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/timeStart"
                style="@style/time_card_style"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/roomLocked"
                tools:text="14:00" />

            <TextView
                android:id="@+id/timeEnd"
                style="@style/time_card_style"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dividerTime"
                tools:text="15.30" />

            <TextView
                android:id="@+id/dividerTime"
                style="@style/time_card_style"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/timeStart" />


            <TextView
                android:id="@+id/dateOfBooking"
                style="@style/time_card_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/timeEnd"
                tools:text="18 Sept 2021" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Content for hide/show -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/openCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startCardView">

            <View
                android:id="@+id/borderRedLineExp"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:background="@color/color_border_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/dividerImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Divider"
                android:src="@drawable/ic_divider"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameUser"
                style="@style/event_card_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@id/borderRedLineExp"
                app:layout_constraintTop_toBottomOf="@+id/dividerImg"
                tools:text="Alexandrov Alexandr" />

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="User Icon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userStatus"
                style="@style/time_card_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toEndOf="@id/borderRedLineExp"
                app:layout_constraintTop_toBottomOf="@+id/nameUser"
                tools:text="PM" />

            <TextView
                android:id="@+id/emailUser"
                style="@style/event_card_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/borderRedLineExp"
                app:layout_constraintTop_toBottomOf="@+id/userStatus"
                tools:text="a.alexandrov@andersenlab.com" />

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="30dp"
                android:contentDescription="Email Icon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mail"
                app:layout_constraintEnd_toEndOf="@+id/userIcon"
                app:layout_constraintStart_toStartOf="@+id/userIcon"
                app:layout_constraintTop_toBottomOf="@id/userIcon" />

            <TextView
                android:id="@+id/skypeName"
                style="@style/event_card_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/borderRedLineExp"
                app:layout_constraintTop_toBottomOf="@+id/emailUser"
                tools:text="a.alexandrov" />


            <TextView
                android:id="@+id/description"
                style="@style/description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="12dp"
                android:ellipsize="end"
                android:maxLength="@integer/max_length_description_event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/borderRedLineExp"
                app:layout_constraintTop_toBottomOf="@+id/skypeName"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>